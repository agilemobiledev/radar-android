<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_message_container"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:orientation="vertical">
    
    <TextView
        android:id="@+id/list_message_name"
        android:text="Justin Knutson wrote..."
        android:textSize="10dp"
        android:textStyle="italic"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="left" />
    
    <TextView 
        android:id="@+id/list_message_text"
        android:text="Holy shitballs, can I share messages now? Let's do it big time get the money dolla dolla bills y'all"
        android:textSize="8dp"
        android:textStyle="normal"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_gravity="left"/>
</LinearLayout>