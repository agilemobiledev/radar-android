<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:background="@drawable/balloon_overlay_unfocused">
    
    <TextView
        android:id="@+id/map_event_title"
        android:text="Test Event Title Here"
        android:textColor="@color/BLACK"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@+id/map_event_time"
        android:text="10:00pm"
        android:textColor="@color/BLACK"
        android:lines="1"
        android:layout_marginTop="0dp"
        android:layout_below="@id/map_event_title"
        android:layout_alignRight="@id/map_event_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
</RelativeLayout>